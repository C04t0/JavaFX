<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<HBox alignment="center" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jfx.Controller">
    <children>
        <Label text="Username" />
        <TextField fx:id="textfield" />
        <Button text="Connect" />
        <GridPane>
            <Label text="${textfield.text}" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1" />
            <Label text="This goes down" />
            <Button minWidth="150" text="Down" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button text="Further Down" GridPane.columnIndex="0" GridPane.rowIndex="3" />
         <RadioButton mnemonicParsing="false" text="RadioButton" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</HBox>
